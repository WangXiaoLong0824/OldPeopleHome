<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jk.dao.LeaveMapper">
    <select id="findLeaveList" parameterType="com.jk.entity.LeaveBean" resultType="java.lang.Long">
        select count(*) from t_leave
    </select>

    <select id="findLeaveListPage" resultType="com.jk.entity.LeaveBean">
        <bind name="key_off" value="(currPage - 1)*pageSize"/>
        select * from t_leave limit ${key_off},${pageSize}
    </select>


    <delete id="deleteLeave" parameterType="int">
    delete  from t_leave where id=#{leave_id}
    </delete>
    <insert id="addLeave" parameterType="com.jk.entity.LeaveBean">
    insert  into t_leave values(#{leave_id},#{leave_time},#{leave_because},#{leave_empname},#{leave_empsex},#{leave_empage},#{leave_status})
    </insert>
    <update id="updateLeave" parameterType="com.jk.entity.LeaveBean">
        update t_leave set leave_time=#{leave_time},leave_because=#{leave_because},leave_empname=#{leave_empname},leave_empsex=#{leave_empsex},leave_empage=#{leave_empage},leave_status=#{leave_status}
        where id=#{leave_id}
    </update>
    <select id="selectLeaveById" resultType="com.jk.entity.LeaveBean" parameterType="int">
        select * from t_leave where id=#{leave_id}
    </select>

</mapper>