<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jk.dao.LeaveMapper">
    <select id="findLeaveList" parameterType="com.jk.entity.LeaveBean" resultType="java.lang.Long">
        select count(*) from t_leave
    </select>

    <select id="findLeaveListPage" resultType="com.jk.entity.LeaveBean">
        <bind name="key_off" value="(currPage - 1)*pageSize"/>
        select * from t_leave limit ${key_off},${pageSize}
    </select>


    <delete id="deleteLeave" parameterType="int">
    delete  from t_leave where leave_id=#{id}
    </delete>
    <insert id="addLeave" parameterType="com.jk.entity.LeaveBean">
    insert  into t_leave values(#{leaveId},#{leaveTime},#{leaveBecause},#{leaveEmpname},#{leaveEmpsex},#{leaveEmpage},#{leaveStatus})
    </insert>
    <update id="updateLeave" parameterType="com.jk.entity.LeaveBean">
        update t_leave set leave_Time=#{leaveTime},leave_Because=#{leaveBecause},leave_Empname=#{leaveEmpname},leave_Empsex=#{leaveEmpsex},leave_Empage=#{leaveEmpage},leave_Status=#{leaveStatus}
        where leave_id=#{leaveId}
    </update>
    <select id="selectLeaveById" resultType="com.jk.entity.LeaveBean" parameterType="int">
        select * from t_leave where leave_id=#{id}
    </select>

</mapper>