<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jk.dao.PeopleMapper" >
  <resultMap id="BaseResultMap" type="com.jk.entity.People" >
    <id column="people_id" property="peopleId" jdbcType="INTEGER" />
    <result column="people_name" property="peopleName" jdbcType="VARCHAR" />
    <result column="old_id" property="oldId" jdbcType="INTEGER" />
  </resultMap>
  <sql id="Base_Column_List" >
    people_id, people_name, old_id
  </sql>
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select 
    <include refid="Base_Column_List" />
    from t_people
    where people_id = #{peopleId,jdbcType=INTEGER}
  </select>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer" >
    delete from t_people
    where people_id = #{peopleId,jdbcType=INTEGER}
  </delete>
  <insert id="insert" parameterType="com.jk.entity.People" >
    insert into t_people (people_id, people_name, old_id
      )
    values (#{peopleId,jdbcType=INTEGER}, #{peopleName,jdbcType=VARCHAR}, #{oldId,jdbcType=INTEGER}
      )
  </insert>
  <insert id="insertSelective" parameterType="com.jk.entity.People" >
    insert into t_people
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="peopleId != null" >
        people_id,
      </if>
      <if test="peopleName != null" >
        people_name,
      </if>
      <if test="oldId != null" >
        old_id,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="peopleId != null" >
        #{peopleId,jdbcType=INTEGER},
      </if>
      <if test="peopleName != null" >
        #{peopleName,jdbcType=VARCHAR},
      </if>
      <if test="oldId != null" >
        #{oldId,jdbcType=INTEGER},
      </if>
    </trim>
  </insert>
  <update id="updateByPrimaryKeySelective" parameterType="com.jk.entity.People" >
    update t_people
    <set >
      <if test="peopleName != null" >
        people_name = #{peopleName,jdbcType=VARCHAR},
      </if>
      <if test="oldId != null" >
        old_id = #{oldId,jdbcType=INTEGER},
      </if>
    </set>
    where people_id = #{peopleId,jdbcType=INTEGER}
  </update>
  <update id="updateByPrimaryKey" parameterType="com.jk.entity.People" >
    update t_people
    set people_name = #{peopleName,jdbcType=VARCHAR},
      old_id = #{oldId,jdbcType=INTEGER}
    where people_id = #{peopleId,jdbcType=INTEGER}
  </update>

    <!--统计总条数-->
    <select id="count" resultType="java.lang.Long">
      select count(*) from t_people
      <!--<include refid="souPeople"></include>-->
    </select>

    <!--查询所有数据-->
    <select id="findPeople" resultMap="BaseResultMap">
      <bind name="key_info" value="(currPage-1)*pageSize"/>
      select * from t_people
      <include refid="souPeople"></include>
      limit #{key_info},#{pageSize}
    </select>

  <sql id="souPeople">
    <where>
         <if test="people.peopleName!=null and people.peopleName!=''">
            and people_name like '%${people.peopleName}%'
         </if>
    </where>
  </sql>
</mapper>